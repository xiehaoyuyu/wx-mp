/* miniprogram/pages/search/search.wxss */
.search-part {
  padding: 15rpx 15rpx 0;
}
.search-input {
  border-radius: 2px;
  background: rgb(238, 238, 243);
  padding: 12rpx 0 12rpx 49rpx;
  font-size: 28rpx;
  position: relative;
}
.search-icon {
  position: absolute;
  top: 0;
  z-index: 5;
  padding: 31rpx 10rpx;
}

/* *热门搜索 */
.hot-search,
.history-search {
  padding: 36rpx 16rpx 0;
  font-size: 28rpx;
}
.search-tit {
  display: inline-block;
  padding-bottom: 18rpx;
}
.hot-keyword-part,
.history-keyword-part {
  display: flex;
  flex-wrap: wrap;
}
.hot-keyword,
.history-keyword {
  font-size: 24rpx;
  background: rgb(238, 238, 243);
  padding: 12rpx 16rpx;
  color: #555;
  display: inline-block;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.delete-icon {
  position: absolute;
  top: 0;
  right: 18rpx;
  z-index: 5;
  padding: 25rpx 8rpx;
}
.trash-icon {
  float: right;
  margin-right: 20rpx;
}
.search-result {
  position: absolute;
  background: #fff;
  padding: 15rpx;
}
.search-resitem {
  width: 716rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #ccc9;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 15rpx;
}
.ok button {
  color: #fba414 !important;
  padding: 0;
  width: auto !important;
}
.search-goods-list {
  padding: 0 12rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.search-goods-list-item {
  width: 49%;
  box-shadow: 0 0 3px #ccc7;
  border-radius: 3px;
  margin-top: 16rpx;
}
.search-goods-list-item image {
  width: 100%;
  height: 360rpx;
}
.search-goods-tit {
  font-size: 28rpx;
  padding: 0 15rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #555;
}
sup {
  font-size: 25rpx;
}
.goods-items-bottom b {
  font-weight: bold;
}
.goods-items-bottom span {
  font-size: 20rpx;
  padding-top: 8rpx;
  color: #5558;
}
.goods-items-bottom {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 15rpx 25rpx;
}
